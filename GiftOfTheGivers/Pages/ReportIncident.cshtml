@page
@model ReportIncidentModel
@{
    ViewData["Title"] = "Report new Incident";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
        background-color: #000;
        background-image: url('/background-img.jpg'); /* Optional: dimmed image */
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        position: relative;
        min-height: 100vh;
        color: #fff;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.85); /* Dim overlay */
            z-index: -1;
        }

    h2 {
        text-align: center;
        margin-top: 40px;
        font-size: 2.2em;
        text-shadow: 0 0 8px rgba(220, 53, 69, 0.6);
    }

    .glass-form {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 0 12px rgba(220, 53, 69, 0.3);
        max-width: 500px;
        margin: 40px auto;
        color: #fff;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 6px;
    }

    input[type="text"],
    textarea {
        background-color: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.4);
        border-radius: 6px;
        padding: 10px;
        width: 100%;
        font-size: 1em;
        color: #fff;
    }

        input:focus,
        textarea:focus {
            outline: none;
            border-color: #dc3545;
            background-color: rgba(255, 255, 255, 0.3);
        }

    ::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    button {
        padding: 10px 30px;
        background: #dc3545;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: box-shadow 0.3s ease;
    }

        button:hover {
            box-shadow: 0 0 12px rgba(220, 53, 69, 0.6);
        }

    a.cancel-link {
        padding: 10px 30px;
        background: #ccc;
        color: #333;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        a.cancel-link:hover {
            background-color: #bbb;
        }

    .alert-success {
        text-align: center;
        margin-top: 20px;
        background-color: rgba(40, 167, 69, 0.2);
        padding: 12px;
        border-radius: 6px;
        color: #28a745;
        font-weight: bold;
    }
</style>

<h2>Report new Incident</h2>

<form method="post" class="glass-form">
    <div style="margin-bottom:20px;">
        <label asp-for="Input.Title">Incident Title</label>
        <input asp-for="Input.Title" type="text" />
    </div>
    <div style="margin-bottom:20px;">
        <label asp-for="Input.Location">Location</label>
        <input asp-for="Input.Location" type="text" />
    </div>
    <div style="margin-bottom:20px;">
        <label asp-for="Input.Type">Disaster Type</label>
        <input asp-for="Input.Type" type="text" />
    </div>
    <div style="margin-bottom:20px;">
        <label asp-for="Input.Description">Incident Description</label>
        <textarea asp-for="Input.Description" rows="4"></textarea>
    </div>
    <div class="form-actions">
        <button type="submit">Report Incident</button>
        <a href="/Dashboard" class="cancel-link">Cancel</a>
    </div>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert-success">@TempData["Message"]</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}