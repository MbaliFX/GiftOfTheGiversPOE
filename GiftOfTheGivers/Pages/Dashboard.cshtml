@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
        background-color: #000;
        color: #fff;
        min-height: 100vh;
    }

    h1 {
        color: #fff;
        text-shadow: 0 0 8px rgba(0, 123, 255, 0.6);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 0 12px rgba(0, 123, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: #fff;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px rgba(0, 123, 255, 0.6);
        }

    a {
        text-decoration: none;
        color: inherit;
    }

    .dashboard-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        margin-top: 40px;
    }

    .dashboard-header {
        text-align: center;
        margin-top: 40px;
    }

    h3 {
        margin-bottom: 10px;
        font-size: 1.4em;
        text-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
    }

    p {
        font-size: 1em;
        color: #ccc;
    }
</style>

<div class="dashboard-header">
    <h1>Disaster Alleviation Foundation</h1>
    <h3>manage your disaster relief activities</h3>
</div>

<div class="dashboard-grid">
    <a href="/ReportIncident">
        <div class="glass-card" style="min-width:220px; max-width:260px;">
            <h3>Log an Incident</h3>
            <p>report new disaster</p>
        </div>
    </a>
    <a href="/MakeDonation">
        <div class="glass-card" style="min-width:220px; max-width:260px;">
            <h3>Log a Donation</h3>
            <p>donate resources to help</p>
        </div>
    </a>
    <a href="/ViewIncidents">
        <div class="glass-card" style="min-width:220px; max-width:260px;">
            <h3>View Incidents</h3>
            <p>see all reported incidents</p>
        </div>
    </a>
    <a href="/ViewDonations">
        <div class="glass-card" style="min-width:220px; max-width:260px;">
            <h3>View Donations</h3>
            <p>see all donations made</p>
        </div>
    </a>
</div>